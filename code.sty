% Kommando zum Anzeigen von Grafiken:
% Parameter:
% #1 - Datei ohne Verzeichnis und Endung
% #2 - Caption
% #3 - Skalierung auf Folien
% #4 - Skalierung auf Skript
\newcommand{\skriptgrafik}[4]
{
  \begin{figure}[H]\begin{center}
  \mode<presentation>{
    \includegraphics[scale=#3,type=png,read=.png,ext=.png]
    {grafiken/#1}
    \caption{#2}
  }

  \mode<article>{
    \includegraphics[scale=#4,type=png,read=.png,ext=.png]
    {grafiken/#1}
    \caption{#2}
    \label{fig:#1}
  }
  \end{center}\end{figure}
}

% Kommando zum Anzeigen von R Grafiken mit Quellcodeverweis:
% Parameter:
% #1 - Datei ohne Verzeichnis und Endung
% #2 - Caption
% #3 - Skalierung auf Folien
% #4 - Skalierung auf Skript
\newcommand{\rgrafik}[4]
{
  \begin{figure}[H]\begin{center}
  \mode<presentation>{
    \includegraphics[scale=#3,type=png,read=.png,ext=.png]
    {grafiken/#1}
    \caption{#2}
  }

  \mode<article>{
    \includegraphics[scale=#4,type=png,read=.png,ext=.png]
    {grafiken/#1}
    \caption{#2 (Quellcode auf S.\pageref{lst:#1})}
    \label{fig:#1}
  }
  \end{center}\end{figure}
}

% Kommando zum Anzeigen von R Quelltexten
% Parameter
% #1 - Datei ohne Verzeichnis und endung
% #2 Angezeigter Dateiname
\newcommand{\rcode}[2]
{
  \lstinputlisting[label=lst:#1,
  caption=#2 (erzeugt Abbildung \ref{fig:#1})
  ]{../code/#1.r}
}


